#include <stdio.h>
#include <limits.h>
#define N 4

int sum(int freq[], int i, int j) {
    int s = 0;
    for (int k = i; k <= j; k++)
        s += freq[k];
    return s;
}

int optimalCost(int freq[], int n) {
    int cost[N][N];

    for (int i = 0; i < n; i++)
        cost[i][i] = freq[i];

    for (int L = 2; L <= n; L++) {
        for (int i = 0; i <= n - L + 1; i++) {
            int j = i + L - 1;
            cost[i][j] = INT_MAX;

            for (int r = i; r <= j; r++) {
                int c = ((r > i) ? cost[i][r - 1] : 0) +
                        ((r < j) ? cost[r + 1][j] : 0) +
                        sum(freq, i, j);
                if (c < cost[i][j])
                    cost[i][j] = c;
            }
        }
    }

    return cost[0][n - 1];
}

int main() {
    char name[] = "M.Vignesh";
    char regno[] = "192211849";
    printf("Name : %s\n", name);
    printf("Regno : %s\n\n", regno);

    int freq[] = {34, 8, 50};
    int n = sizeof(freq) / sizeof(freq[0]);
    printf("Cost of Optimal BST is %d\n", optimalCost(freq, n));
    return 0;
}
