#include <stdio.h>
int reverseNumber(int num);
int main() {
    printf("Name : M.Vignesh\n");
    printf("Reg no : 192211849\n");
    int num;
    printf("Enter a number to reverse: ");
    scanf("%d", &num);
    int reversed = reverseNumber(num);
    printf("Reversed number: %d\n", reversed);
    return 0;
}
int reverseNumber(int num) {
    int reversed = 0;
    while (num != 0) {
        int digit = num % 10; 
        reversed = reversed * 10 + digit; 
        num /= 10;
    }
    return reversed;
}
